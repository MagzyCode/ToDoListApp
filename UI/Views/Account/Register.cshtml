    <div class="form-group row">
        
        <label asp-for="UserName" class="col-xs-2 col-form-label">Имя пользовальтеля</label>
        <br />
        <input asp-for="UserName" class="form-control col-xs-2" type="text" id="example-text-input">
        <span asp-validation-for="UserName"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Gender" class="col-xs-2 col-form-label">Имя пользовальтеля</label>
        <br />
        <select class="form-control col-xs-5" asp-for="Gender">
            <option>Мужской</option>
            <option>Женский</option>
        </select>
    </div>
