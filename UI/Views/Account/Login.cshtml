@model LoginViewModel

<h2>Вход в приложение</h2>
<br/>
<form method="post" asp-controller="Account" asp-action="Login">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Email" class="col-xs-2 col-form-label">Имя пользовальтеля</label>
        <br />
        <input asp-for="Email" class="form-control col-xs-2" type="email" id="example-text-input">
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Password" class="col-xs-2 col-form-label">Пароль</label>
        <br />
        <input asp-for="Password" class="form-control col-xs-5" type="password" id="example-text-input">
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group row">
        <button type="submit" class="btn btn-primary mb-2">Войти</button>
    </div>
